      <% else %>
        <%= link_to "Registrarte", new_user_path, class:"btn-small" %>
        <%= link_to :login, class:"btn btn-small" do%>Entrar<%= content_tag(:span, "", class:"icon-login") %>
        <%end%>
      <% end %>
    </div>

</header>