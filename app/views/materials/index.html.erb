<div id="materials-index-wrapper">
  <p id="notice"><%= notice %></p>

  <div class="header-wrapper">
    <%= render('layouts/header') %>
  </div>

  <h1>Materials</h1>

  <% @materials.each do |material| %>
    <div class="materials-wrapper">
      <h5><%= material.title %></h5>
      <% unless material.level == "" %>
      <p>Level: <%= material.level %></p>
      <%end%>
      <p><%= material.description %></p>
      <a href="<%= material.link %>" target="_blank", class="btn-small">Download</a>
      
      <% if material.user == current_user %>
        <%= link_to 'Edit', edit_material_path(material), class:"btn-small" %>
        <%= link_to 'Delete', material, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn-small" %>
      <%end%>
    </div>
  <%end%>

  <% if current_user == User.first %>
    <div><%= link_to 'Add New Material', new_material_path, class:'btn-small' %></div>
  <% end %>

  <%= link_to "AtrÃ¡s", root_path, class:'btn-small' %>

  <%= render('layouts/footer') %>

</div>
