<div id="materials-index-wrapper">
  <p id="notice"><%= notice %></p>

  <div class="header-wrapper">
    <%= render('layouts/header') %>
  </div>

  <h1>Materials</h1>

  <% @materials.each do |material| %>
    <h5><%= material.title %></h5>
    <p><%= material.level %></p>
    <p><%= material.description %></p>
    <a href="<%= material.link %>" target="_blank">Download</a>
    
    <% if material.user == current_user %>
      <%= link_to 'Edit', edit_material_path(material) %></td>
      <%= link_to 'Delete', material, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%end%>
  <%end%>

  <% if current_user == User.first %>
    <div><%= link_to 'Add New Material', new_material_path, class:'btn-small' %></div>
  <% end %>

