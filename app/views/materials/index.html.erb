<p id="notice"><%= notice %></p>

<h1>Materials</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Level</th>
      <th>Description</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.title %></td>
        <td><%= material.level %></td>
        <td><%= material.description %></td>
        <td><a href="<%= material.link %>" target="_blank">Download</a></td>
        <td><%= link_to 'Show', material %></td>
        
        <% if material.user == current_user %>
          <td><%= link_to 'Edit', edit_material_path(material) %></td>
          <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user == User.first %>
  <%= link_to 'Add New Material', new_material_path %>
<% end %>

<br>

<%= link_to "Home", root_path, class:'btn-small' %>
